<% if (messages) { %>
  <div class="messages">
    <% if (messages.success) { %>
      <div class="alert alert-success">
        <%= messages.success %>
      </div>
    <% } %>
    <% if (messages.error) { %>
      <% messages.error.forEach((error) => { %>
      <div class="alert alert-danger">
        <%= error.message %>
      </div>
      <% }); %>
    <% } %>
    <% if (messages.info) { %>
      <div class="alert alert-info">
        <%= messages.info %>
      </div>
    <% } %>
  </div>
<% } %>
