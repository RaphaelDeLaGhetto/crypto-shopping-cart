<% include header %>
  <% include messages %>

  <% if(products && products.length > 0) { %>
    <ul id="products" class="row">
      <% var i = 0; products.forEach(function(product) { i++; %>
        <li class="product col col-md-4">
          <h3 class="product-title"><%= product.name %></h3>
          <figure class="product-image">
            <img src="/images/products/<%= product.image %>" alt="" class="img-thumbnail img-responsive">
          </figure>
          <div class="cart-data">
            <form action="/cart" method="post">
              <div class="product-info">
                <span class="price">
                  <%= product.formattedPrice %> <%= process.env.CURRENCY %>
                </span>
                <% if (product.options.length) { %>
                  <select class="form-control" name="option">
                    <% product.options.forEach((option) => { %>
                      <option value="<%= option %>"><%= option %></option>
                    <% }); %>
                  </select>
                <% } %>
                <input type="hidden" name="id" value="<%= product._id %>">
                <button type="submit" class="btn btn-primary">
                  <i class="fa fa-cart-plus"></i>
                </button>
              </div>
            </form>
          </div>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p class="alert alert-info">Sorry, no products to show.</p>
  <% } %>

<% include footer %>
