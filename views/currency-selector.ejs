<% if (wallets.length > 1) { %>
  <nav class="navbar currency-nav">
    <div class="navbar-header navbar-left">
      <% wallets.forEach((wallet) => { %>
        <% if (wallet.currency === cart.preferredCurrency) { %>
          <span class="active">
            <%= wallet.name %>
          </span>
        <% } else { %>
          <a class="nav-link" href="/cart/set-currency/<%= wallet.currency %>"><%= wallet.name %></a>
        <% } %>
      <% }); %>
    </div>
  </nav>
<% } %>
