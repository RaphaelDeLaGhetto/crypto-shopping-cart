<% if (wallets.length > 1) { %>
  <form action="/cart/set-currency" method="post">
    <select class="form-control" name="currency">
      <% wallets.forEach((option) => { %>
        <option value="<%= option.currency %>"><%= option.name %> (<%= option.currency %>)</option>
      <% }); %>
    </select>
    <button type="submit" class="btn btn-primary">
      Set preferred currency 
    </button>
  </form>
<% } %>
